@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@model RenderingModel
@{
    string URL = Sitecore.Links.LinkManager.GetItemUrl(Model.Item);
}
<!-- [FeaturedEvent] -->
<div class="thumbnail well @Model.Rendering.Parameters["CssClass"]">
    <a href="@URL">
        @Html.Sitecore().Field("EventImage", new { @class = "img-responsive", mw = 500, mh = 300 })
    </a>
    <div class="caption">
        <h3 class="teaser-heading"> @Html.Sitecore().Field("ContentHeading") </h3>
        <p>
            @Html.Sitecore().Field("ContentIntro")
        </p>
        <a href="@URL" class="btn btn-default">Read more</a>
    </div>
</div>
<!-- [/FeaturedEvent] -->