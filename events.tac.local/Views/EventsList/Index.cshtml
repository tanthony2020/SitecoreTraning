@using events.tac.local.Models
@using TAC.Utils.Helpers
@model EventsList
<!-- [Event List] -->
<div class="content-list newslist">
    <ol class="media-list">
        @foreach (var item in Model.Events)
        {
            <li class="media media-align-middle">
                <div class="media-left">
                    <a href="@item.Url">@item.EventImage</a>
                </div>
                <div class="media-body">
                    <h3 class="media-heading">
                        <a href="@item.Url">@item.ContentHeading</a>
                    </h3>
                    <div class="description">
                        @item.ContentIntro
                    </div>
                </div>
                <div class="metadata well">@item.StartDate</div>
            </li>
        }
    </ol>
</div>
<!-- [Event List] -->
@Html.Pager(Model.PageSize, Model.TotalResultCount)